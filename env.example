# ComEd API Configuration
COMED_API_KEY=  # Optional: API key if required by ComEd

# MQTT Configuration
MQTT_HOST=mosquitto
MQTT_PORT=1883

# Vehicle Configuration
VEHICLE_VIN=your-vin  # Replace with your actual VIN

# Charging Logic Configuration
CHARGE_PRICE_THRESHOLD_CENTS=5.0  # Start charging when price is below this (cents/kWh)
MIN_CHARGE_LEVEL=20  # Always charge if below this percentage
MAX_CHARGE_LEVEL=90  # Stop charging when reaching this percentage
CHECK_INTERVAL_SECONDS=300  # How often to check prices (5 minutes = 300 seconds)

# SMS Notification Configuration (Optional - leave blank to disable)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL=your-@gmail.com
EMAIL_PASSWORD=  # Use app-specific password for Gmail
PHONE_NUMBER=  # Your phone number (no dashes or spaces)
CARRIER_GATEWAY=tmomail.net  # AT&T: txt.att.net, Verizon: vtext.com, T-Mobile: tmomail.net
